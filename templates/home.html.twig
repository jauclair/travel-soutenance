{% extends "base.html.twig" %}

{% block title %}AsiaDream{% endblock %}

{% block body %}
<div class="container">
    <h1>Une selection de nos voyages</h1>
</div>
        
	{#--- debut de la div container #}
	<div class="container p-0">
			{#--- image inde et chine #}
		<div class="row p-0">				
			{% for tour in tours %}                
				<div  class="col-12 col-md-6 px-4">
					<div class="bloc" class="card col-12 my-2">
						<img class="card-img-top " src="{{asset('img/tours/'~tour.image) }}" alt="image {{ tour.title }}">
						<div class="card-body mb-5">
							<h4 class="card-title" style="text-align:center">{{ tour.title }}</h4>
							{# Voir comment afficher seulement le début (pb c'est en html)
							<p style="color:red">{{ tour.description|purify }}</p>
							#}
							{# // Conversion des centimes en euro pour #}
							<p class="card-text" style="color:red">{{tour.price / 100.0}} € </p>
							<a href="{{ path('travelDetail', {id: tour.id}) }}" class="btn btn-danger">En savoir plus +</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}



			