{% extends "base.html.twig" %}

{% block title %}AsiaDream{% endblock %}
{% block body %}
<div id="carouselExampleFade" class="carousel slide carousel-fade carousel d-none d-sm-block" data-ride="carousel">
  <div class="carousel-inner ">
    <div class="carousel-item active">
      <img class="d-block w-100" src="{{ asset('img/chapeau2.jpg') }}" alt="First slide">
      	<div class="carousel-caption d-none d-md-block">
    		<h1>Votre agence française spécialiste
    			<br>
    			des voyages en Asie
    		</h1>
		</div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{ asset('img/temple.jpg') }}" alt="Second slide">
       	<div class="carousel-caption d-none d-md-block">
    		<h1>Votre agence française spécialiste
    			<br>
    			des voyages en Asie
    		</h1>
		</div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{ asset('img/agriculture-asia-vietnam.jpg') }}" alt="Third slide">
       	<div class="carousel-caption d-none d-md-block">
    		<h1>Votre agence française spécialiste
    			<br>
    			des voyages en Asie
    		</h1>
		</div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<br><br>
{#--- debut de la div container #}    
<div class="container p-0">
		{#--- image d'un pays #}
	<div class="row p-0">             
    {% for tour in tours %}
        <div  class="col-12 col-md-4 px-2">                
			<div class="card-deck mt-5  mr-auto ml-auto">
				<div class="card cardSet text-white">
					<div class="card-body">
						<img src="{{asset('img/tours/'~tour.image) }}" alt="image {{ tour.title }}" class="img-fluid" width="960" height="960">
						<h5 class="card-title mt-2">{{ tour.title }}</h5>
						{# Voir comment afficher seulement le début (pb c'est en html)
							<p style="color:red">{{ tour.description|purify }}</p>#}
						<p class="card-text text-white">{{tour.price}} € </p>
							<a href="{{ path('travelDetail', {id: tour.id}) }}" class="btn btn-dark btn-sm float-right">En savoir plus +</a>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}
	</div>
</div>		
{% endblock %}

