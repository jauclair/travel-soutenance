{% extends "base.html.twig" %}

{% block title %}Detail de Voyage{% endblock %}

{% block body %}

<div class="container">
    <h1>PAGE SEJOUR</h1>
</div>

    {#--- debut de la div container #}
	<div class="container">	
		<div class="row pl-5">	           
            <div  class="col-12 col-md-6 px-4">
                {# Affichage du détail d'un voyage #}
                <div class="bloc" class="card col-12 my-2">
                    <img class="card-img-top" src="{{asset('img/tours/'~tour.image) }}" alt="image {{ tour.title }}">
                    <div class="card-body mb-5">
                        <h4 class="card-title" style="text-align:center">{{ tour.title }}</h4>
                        <p class="card-text" style="color:red">{{tour.getCountry().getCountry()}} </p>
                        <p style="color:red">{{tour.description|purify}}</p>				 
                        <p class="card-text" style="color:red">{{tour.price}} € </p>
                        <p class="card-text" style="color:red">{{tour.getDepartureDate()|date("m/d/Y")}}</p>
                        <p class="card-text" style="color:red">{{tour.getArrivalDate|date("m/d/Y")}}</p>
                        <p class="card-text" style="color:red">{% if tour.getTravelerGroup() %}En groupe{% else %}{% endif %} </p>
                        <a class="btn btn-primary" href="/achat-voyage/{{tour.getFlight()[0].getId()}}/{{tour.getId()}}" role="button">Acheter</a>
                    </div>
                </div>
            </div>          
		</div>
	</div>
	
{% endblock %}



			