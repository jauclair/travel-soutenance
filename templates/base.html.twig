    <script src="{{ asset('js/scriptflights.js')}}" ></script>
    {# script fonction scroll de la navbar#}
    <script src="{{ asset('js/scriptnavbar.js')}}" ></script>
    {# script carousel accueil#}
    <script src="{{ asset('js/scriptcarousel.js')}}" ></script>
</body>

</html>

